
<div class="page-header">
	<h1>{{model.namelg}} {{model.preis}}</h1>
</div>

<form>
	<div class="row">
		<div class="col-sm-4">
			<img src="https://3.bp.blogspot.com/-W__wiaHUjwI/Vt3Grd8df0I/AAAAAAAAA78/7xqUNj8ujtY/s1600/image02.png" class="img-thumbnail produkt-detail-bild" alt="A generic square placeholder">
		</div>
		<div class="col-sm-6">
			<div class="form-group has-feedback {{if betragValid 'has-success'}}">
				<label>Betrag:</label>
				<div>
				{{input type="text" value=betrag class="form-control" placeholder="Betrag" autofocus="autofocus" }}
				{{#if betragValid}}<span class="glyphicon glyphicon-ok form-control-feedback glyp-my-correct"></span>{{/if}}
				</div>
			</div>
			<div class="form-group has-feedback {{if headValid 'has-success'}}">
				<label>Überschrift:</label>
				<div>
				{{input type="text" value=head class="form-control" placeholder="Überschrift" }}
				{{#if headValid}}<span class="glyphicon glyphicon-ok form-control-feedback glyp-my-correct"></span>{{/if}}
				</div>
			</div>
			<div class="form-group has-feedback {{if lauftextValid 'has-success'}}">
				<label>Lauftext:</label>
				{{textarea value=lauftext class="form-control" placeholder="Lauftext" rows="5" }}
				{{#if lauftextValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
			</div>
			<div class="form-group">
			<button {{action "warenkorb_add" model}} disabled={{submitDisabled}} type="submit" class="btn btn-default">IN DEN WARENKORB</button>
			</div>			
		</div>
	</div>
</form>
